						<a href="{{ path('app_kurse') }}" class="nav-link active" aria-current="page">Home</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('app_kunden') }}" class="nav-link">Features</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('app_details') }}" class="nav-link">Pricing</a>
					</li>

				</ul>
			</footer>
		</div> #}
{% endblock %}

	</body>
</html>
