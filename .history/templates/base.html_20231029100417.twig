<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			Kurse
			{% endblock %}
		</title> 
		
		{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

		{% endblock %}


		{% block javascripts %}
		{{ encore_entry_script_tags('app') }}

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

		{% endblock %}

	</head>

	<body>

{% block header %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary rounded" aria-label="Twelfth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbars_ziff" aria-controls="navbars_ziff" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-md-center" id="navbars_ziff">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') == 'app_kurse' %}active{% endif %}" aria-current="page" href="{{ path('app_kurse') }}">Kurse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') == 'app_kunden' %}active{% endif %}" href="{{ path('app_kunden') }}">Kunden</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') == 'app_details' %}active{% endif %}" href="{{ path('app_details') }}">Details</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
		<footer class="footer mt-auto py-3 bg-body-tertiary">
			<div class="container">
				<span class="text-muted">Entwickelt von Dawood Nasimi</span>
			</div>
		</footer>

		{# <div class="container-fluid" style="background:whitesmoke">
			<footer class="d-flex justify-content-center py-3">
