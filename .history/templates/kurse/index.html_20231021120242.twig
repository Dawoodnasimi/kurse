{% extends 'base.html.twig' %}

{% block title %}Kurse
{% endblock %}

{% block body %}
	<div class="container px-4 py-5">
		<h2 class="pb-2 border-bottom">Liste der Kurse</h2>

		<div class="row row-cols-1 row-cols-md-2 align-items-md-center g-5 py-5">

			{% for kurs in kurse %}
				<div class="col d-flex flex-column align-items-start gap-2">
					<h2 class="fw-bold text-body-emphasis">Hier finde Sie einen Überblick �ber die Kurse</p>
				</div>

				<div class="col">
					<div class="row row-cols-1 row-cols-sm-2 g-4">
						<div class="col d-flex flex-column gap-2">
							<div class="bi bi-backpack4-fill d-inline-flex align-items-center justify-content-start bg-gradient fs-4 rounded-3">
								<svg class="bi" width="1em" height="1em">
									<use xlink:href="#collection"></use>
								</svg>
							</div>
							<h4 class="fw-semibold mb-0 text-body-emphasis">ID Nummer</h4>
							<p class="text-body-secondary">{{ kurs.id }}</p>
						</div>

						<div class="col d-flex flex-column gap-2">
							<div class="bi bi-backpack4-fill d-inline-flex align-items-center justify-content-start bg-gradient fs-4 rounded-3">
								<svg class="bi" width="1em" height="1em">
									<use xlink:href="#gear-fill"></use>
								</svg>
							</div>
							<h4 class="fw-semibold mb-0 text-body-emphasis">{{ kurs.name}}</h4>
							<p class="text-body-secondary">{{ kurs.info }}</p>
						</div>

						<div class="col d-flex flex-column gap-2">
							<div class="bi bi-backpack4-fill d-inline-flex align-items-center justify-content-start bg-gradient fs-4 rounded-3">
								<svg class="bi" width="1em" height="1em">
									<use xlink:href="#speedometer"></use>
								</svg>
							</div>
							<h4 class="fw-semibold mb-0 text-body-emphasis">Featured title</h4>
							<p class="text-body-secondary">Paragraph of text beneath the heading to explain the heading.</p>
						</div>

						<div class="col d-flex flex-column gap-2">
							<div class="bi bi-backpack4-fill d-inline-flex align-items-center justify-content-start bg-gradient fs-4 rounded-3">
								<svg class="bi" width="1em" height="1em">
									<use xlink:href="#table"></use>
								</svg>
							</div>
							<h4 class="fw-semibold mb-0 text-body-emphasis">Featured title</h4>
							<p class="text-body-secondary">Paragraph of text beneath the heading to explain the heading.</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
